{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": "",
        "aws_region": "",
        "subnet_id": "",
        "source_ami": "{{env `source_ami`}}",
        "ssh_username": "ubuntu",
        "account_ids": "{{env `account_ids`}}",
        "bucket_name": ""
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "{{user `aws_region`}}",
            "instance_type": "t2.micro",
            "subnet_id": "{{user `subnet_id`}}",
            "source_ami": "{{user `source_ami`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "ami_name": "csye6225_{{timestamp}}",
               "tags": {
                   "Name": "csye6225_{{timestamp}}_PackerBuilder"
               },
            "ami_users": "{{ user `account_ids` }}",
            "ami_description": "Ubuntu AMI for CSYE 6225 - Spring 2020",
            "launch_block_device_mappings": [
                {
                    "device_name": "/dev/sda1",
                    "volume_size": 8,
                    "volume_type": "gp2",
                    "delete_on_termination": true
                }
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "execute_command": "{{.Vars}} sudo -E -S bash '{{.Path}}'",
            "scripts": ["initialsetup.sh", "codedeployagent.sh"],
            "environment_vars": ["bucket_name={{user `bucket_name`}}", "aws_region={{user `aws_region`}}"]
        }
    ]
}